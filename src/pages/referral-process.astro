---
import Referral from "../components/referral-process/referral-process";
import Layout from "../layouts/Layout.astro";

const pageTitle = "Referral & Admission Process | 24/7 Intake Support | Three Rivers Behavioral Health";
const pageDescription = "Learn how to refer a patient or admit a loved one to Three Rivers Behavioral Health. 24/7 intake support for families, physicians, and healthcare providers in West Mifflin, PA.";
const pageKeywords = "psychiatric hospital referral process, how to refer patient mental health, mental health admission process Pittsburgh, psychiatric intake process, 24/7 psychiatric admissions, how to admit loved one psychiatric hospital, emergency psychiatric referral, physician referral mental health, hospital referral psychiatric care, mental health crisis admission, psychiatric hospital intake, referral process elderly mental health, admission requirements psychiatric hospital, how to get someone admitted psychiatric care, family referral psychiatric hospital, urgent psychiatric admission, psychiatric evaluation referral, intake coordinator mental health, psychiatric bed availability, transfer to psychiatric hospital, ED referral psychiatric care, nursing home psychiatric referral, how long psychiatric admission take, psychiatric admission criteria, insurance verification psychiatric admission, Medicare psychiatric referral";
const canonicalUrl = "https://trbhcares.com/referral-process";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalProcedure",
  "name": "Psychiatric Hospital Referral and Admission Process",
  "provider": {
    "@type": "Hospital",
    "name": "Three Rivers Behavioral Health"
  },
  "description": pageDescription
};

const faqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How do I refer someone to Three Rivers Behavioral Health?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Call our 24/7 intake line at 1-888-391-0229. Our clinical team will conduct an immediate assessment and guide you through the admission process."
      }
    },
    {
      "@type": "Question",
      "name": "Who can make a referral to your psychiatric hospital?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Referrals can be made by physicians, emergency departments, family members, other hospitals, nursing facilities, and healthcare providers."
      }
    },
    {
      "@type": "Question",
      "name": "Is your intake team available 24/7?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, our clinical intake team is available around the clock, 24 hours a day, 7 days a week to assist with admissions and answer questions."
      }
    }
  ]
};

const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://trbhcares.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Referral Process",
      "item": canonicalUrl
    }
  ]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogTitle="Referral & Admission Process | Three Rivers Behavioral Health"
  ogDescription="24/7 intake support for psychiatric admissions. Simple referral process for families, physicians, and healthcare providers."
  ogImage="https://trbhcares.com/background/Our_Focus_Banner.jpg"
  ogUrl={canonicalUrl}
  twitterTitle="Psychiatric Hospital Referral Process | Three Rivers"
  twitterDescription="Learn how to refer a patient or admit a loved one. 24/7 intake support available."
  twitterImage="https://trbhcares.com/background/Our_Focus_Banner.jpg"
  canonicalUrl={canonicalUrl}
  structuredData={[structuredData, faqStructuredData, breadcrumbStructuredData]}
>
	<Referral />
</Layout>
