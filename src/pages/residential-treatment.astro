---
import Residential from "../components/residential-treatment/residential-treatment";
import Layout from "../layouts/Layout.astro";

const pageTitle = "Residential Mental Health Treatment | Long-Term Psychiatric Care | Three Rivers Behavioral Health";
const pageDescription = "Comprehensive residential mental health treatment for adults 18+ at Three Rivers Behavioral Health. Long-term psychiatric care in a safe, therapeutic environment in West Mifflin, PA.";
const pageKeywords = "residential mental health treatment, long-term psychiatric care adults, residential psychiatric program, mental health residential facility Pittsburgh, adult residential treatment, residential care mental illness, what is residential mental health treatment, residential psychiatric services, long-term mental health care, residential treatment adults 18+, psychiatric residential program Pennsylvania, residential mental health facility near me, residential treatment schizophrenia, residential care severe mental illness, adult mental health residential, residential psychiatric care Western PA, long-term residential mental health, transitional residential treatment, residential program mental health adults, residential mental health Pittsburgh area, residential psychiatric facility adults, mental health group home adults, residential treatment program elderly, residential care dementia behavioral issues, long-term psychiatric residential, residential mental health insurance coverage, Medicare residential mental health";
const canonicalUrl = "https://www.trbhcares.com/residential-treatment";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalTherapy",
  "name": "Residential Mental Health Treatment",
  "provider": {
    "@type": "Hospital",
    "name": "Three Rivers Behavioral Health"
  },
  "description": pageDescription,
  "availableService": {
    "@type": "MedicalProcedure",
    "name": "Long-Term Residential Psychiatric Care"
  }
};

const breadcrumbStructuredData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.trbhcares.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Residential Treatment",
      "item": canonicalUrl
    }
  ]
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogTitle="Residential Mental Health Treatment for Adults | Three Rivers"
  ogDescription="Long-term residential psychiatric care in a safe, therapeutic environment for adults with serious mental illness."
  ogImage="https://www.trbhcares.com/background/Our_Focus_Banner.jpg"
  ogUrl={canonicalUrl}
  twitterTitle="Residential Mental Health Treatment | Three Rivers Behavioral Health"
  twitterDescription="Comprehensive residential psychiatric care for adults 18+ needing long-term mental health support."
  twitterImage="https://www.trbhcares.com/background/Our_Focus_Banner.jpg"
  canonicalUrl={canonicalUrl}
  structuredData={[structuredData, breadcrumbStructuredData]}
>
	<Residential />
</Layout>
